{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["/src/*"],
      "@components/*": ["/src/components/*"],
      "@images/*": ["/src/assets/images/*"]
    }
  },
  "include": ["vite.config.ts"]
}
